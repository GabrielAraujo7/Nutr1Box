<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cadastro7_bg__frame_23_ek1_color"
    tools:context=".Activity.RefeicoesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Refeicoes"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_marginStart="136dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/refei__es_ek3_string"
                    android:textColor="@color/inicialcalorias_color"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/inicial_m1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Refeicoes"
                    tools:ignore="MissingConstraints">


                    <TextView
                        android:id="@+id/Calorias"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="6dp"
                        android:text="@string/calorias_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/numerico"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/milquinhentos"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/meta"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="103dp"
                        android:layout_marginTop="70dp"
                        android:text="@string/meta"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="145dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/minus"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/numerico2"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/mil"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/alimentacao"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="70dp"
                        android:text="@string/alimentacao"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/igualdade"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="220dp"
                        android:layout_marginTop="45dp"
                        android:text="@string/igualdade"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="240dp"
                        android:layout_marginTop="45dp"
                        app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.116"
                        app:layout_constraintStart_toStartOf="@+id/frameLayout"
                        app:layout_constraintTop_toTopOf="@+id/frameLayout"
                        app:layout_constraintVertical_bias="0.75"
                        app:srcCompat="@drawable/background_white" />

                    <TextView
                        android:id="@+id/quinhentos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="255dp"
                        android:layout_marginTop="50dp"
                        android:text="@string/quinhentos"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/Restante"
                        style="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_marginStart="255dp"
                        android:layout_marginTop="83dp"
                        android:text="@string/restantes_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </FrameLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:rotationY="180"
                    app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/clip_path_group" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:rotationY="180"
                    app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/clip_path_group_ek2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:padding="6dp"
                android:background="@drawable/background_caixa_texto"
                android:backgroundTint="@color/inicial_m1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_coffee_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cafe_da_manha"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtCafeAtual"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="@string/zero"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:text="@string/ml_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAddCafe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/background_caixa_texto"
                        android:hint="@string/adicionar_cafe_string" />

                    <ImageView
                        android:id="@+id/imgAddCafe"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24_a8ba31" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:padding="6dp"
                android:background="@drawable/background_caixa_texto"
                android:backgroundTint="@color/inicial_m1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_local_dining_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/almo_o_string"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtAlmocoAtual"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="@string/zero"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:text="@string/ml_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAddAlmoco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/background_caixa_texto"
                        android:hint="@string/adicionar_refei__o_string" />

                    <ImageView
                        android:id="@+id/imgAddAlmoco"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24_a8ba31" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:padding="6dp"
                android:background="@drawable/background_caixa_texto"
                android:backgroundTint="@color/inicial_m1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_local_dining_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jantar_string"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtJantarAtual"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="@string/zero"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:text="@string/ml_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAddJantar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/background_caixa_texto"
                        android:hint="@string/adicionar_refei__o_string" />

                    <ImageView
                        android:id="@+id/imgAddJantar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24_a8ba31" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:padding="6dp"
                android:background="@drawable/background_caixa_texto"
                android:backgroundTint="@color/inicial_m1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_fastfood_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lanches_string"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/txtLancheAtual"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:text="@string/zero"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:gravity="end"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:text="@string/ml_string"
                        android:textColor="@color/inicialcalorias_color"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etAddLanche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:layout_marginRight="3dp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/background_caixa_texto"
                        android:hint="@string/adicionar_refei__o_string" />

                    <ImageView
                        android:id="@+id/imgAddLanche"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:layout_marginLeft="3dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/baseline_add_circle_outline_24_a8ba31" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="0"
        android:gravity="center"
        android:background="@drawable/background_caixa_texto_radius"
        android:backgroundTint="@color/inicial_m1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInicio"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="@string/inicio"
            android:layout_marginRight="1.5dp"
            android:gravity="center"
            android:textColor="@color/inicialcalorias_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/background_caixa_texto_radius"/>

        <TextView
            android:id="@+id/txtRefeicoes"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="@string/refei__es_ek3_string"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/background_caixa_texto_radius"
            android:backgroundTint="@color/cadastro_10pesquisar_color"/>

        <TextView
            android:id="@+id/txtCompras"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="@string/compras"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            android:gravity="center"
            android:textColor="@color/inicialcalorias_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/background_caixa_texto_radius"/>

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:text="@string/info"
            android:layout_marginLeft="1.5dp"
            android:gravity="center"
            android:textColor="@color/inicialcalorias_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:singleLine="true"
            android:background="@drawable/background_caixa_texto_radius"/>

    </LinearLayout>

</LinearLayout>

